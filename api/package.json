{
  "name": "apollo-upload-examples-api",
  "private": true,
  "engines": {
    "node": ">=8.6",
    "npm": ">=5.4"
  },
  "dependencies": {
    "@std/esm": "^0.18.0",
    "apollo-upload-server": "^4.0.0-alpha.2",
    "dotenv": "^4.0.0",
    "graphql": "^0.11.7",
    "graphql-server-koa": "^1.3.2",
    "graphql-tools": "^2.15.0",
    "kcors": "^2.2.1",
    "koa": "^2.4.1",
    "koa-bodyparser": "^4.2.0",
    "koa-compress": "^2.0.0",
    "koa-router": "^7.3.0",
    "koa-static": "4.0.2",
    "lowdb": "^1.0.0",
    "mkdirp": "^0.5.1",
    "promises-all": "^1.0.0",
    "shortid": "^2.2.8"
  },
  "devDependencies": {
    "eslint": "^4.14.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-node": "^5.2.1",
    "eslint-plugin-prettier": "^2.4.0",
    "nodemon": "^1.14.7",
    "prettier": "^1.9.2"
  },
  "scripts": {
    "lint": "eslint . --ext mjs",
    "fix": "npm run lint -- --fix && prettier --write '**/*.md'",
    "dev": "nodemon --ext mjs",
    "start": "node --require @std/esm --require dotenv/config server.mjs"
  },
  "@std/esm": "cjs",
  "eslintConfig": {
    "parserOptions": {
      "sourceType": "module",
      "ecmaVersion": 2017,
      "ecmaFeatures": {
        "experimentalObjectRestSpread": true
      }
    },
    "env": {
      "es6": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:import/recommended",
      "plugin:node/recommended"
    ],
    "plugins": [
      "import",
      "node",
      "prettier"
    ],
    "rules": {
      "curly": [
        "error",
        "multi"
      ],
      "node/no-unsupported-features": [
        "error",
        {
          "ignores": [
            "modules"
          ]
        }
      ],
      "prettier/prettier": "error"
    }
  },
  "prettier": {
    "proseWrap": "never",
    "singleQuote": true,
    "semi": false
  }
}
